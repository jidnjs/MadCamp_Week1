<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_contact">

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.example.refactor.ui.contact.ContactFragment"
        tools:layout="@layout/fragment_contact">
        <action
            android:id="@+id/action_contactFragment_to_contactDetailFragment"
            app:destination="@id/navigation_contact_detail" />
        <action
            android:id="@+id/action_contactFragment_to_groupDetailFragment"
            app:destination="@id/navigation_group_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_contact_detail"
        android:name="com.example.refactor.ui.contact.ContactDetailFragment"
        tools:layout="@layout/fragment_contact_detail">
        <action
            android:id="@+id/action_contactDetailFragment_to_groupSelectionFragment"
            app:destination="@id/navigation_group_selection" />
        <argument
            android:name="contactId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/navigation_group_selection"
        android:name="com.example.refactor.ui.contact.GroupSelectionFragment"
        tools:layout="@layout/fragment_group_selection"/>

    <fragment
        android:id="@+id/navigation_group_detail"
        android:name="com.example.refactor.ui.contact.GroupDetailFragment"
        tools:layout="@layout/fragment_group_detail"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.refactor.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.refactor.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>